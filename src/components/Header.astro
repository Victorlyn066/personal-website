---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
import { Image } from 'astro:assets';
import ProfileImage from '../assets/profile.jpg';
---

<header>
  <nav>
    <div class="site-title">
      <a href="/">{SITE_TITLE}</a>
    </div>
    <div class="header-controls">
      <button class="settings-toggle" id="settings-toggle" aria-label="Toggle dark mode">
        <span id="theme-icon">
          <svg id="sun-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#222" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="display: none;"><circle cx="12" cy="12" r="5"/><line x1="12" y1="1" x2="12" y2="3"/><line x1="12" y1="21" x2="12" y2="23"/><line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/><line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/><line x1="1" y1="12" x2="3" y2="12"/><line x1="21" y1="12" x2="23" y2="12"/><line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/><line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/></svg>
          <svg id="moon-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#222" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 12.79A9 9 0 1 1 11.21 3a7 7 0 0 0 9.79 9.79z"/></svg>
        </span>
      </button>
      <button class="menu-toggle" id="menu-toggle" aria-label="Open menu">
        <svg width="24" height="24" viewBox="0 0 24 24"><path d="M3 6h18M3 12h18M3 18h18" stroke="#222" stroke-width="2" stroke-linecap="round"/></svg>
      </button>
    </div>
    <div class="menu-bar" id="menu-bar">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/about">About</HeaderLink>
      <HeaderLink href="/blog">Blog</HeaderLink>
      <HeaderLink href="/contact">Contact</HeaderLink>
      <HeaderLink href="/snippets">GitHub/Coding Projects</HeaderLink>
    </div>
  </nav>
</header>

<script is:inline>
  document.addEventListener('DOMContentLoaded', function () {
    const toggle = document.getElementById('menu-toggle');
    const menu = document.getElementById('menu-bar');
    function openMenu(e) {
      e.stopPropagation();
      menu.classList.toggle('open');
    }
    toggle.addEventListener('click', openMenu);
    // Optional: close menu when clicking outside
    document.addEventListener('click', function (e) {
      if (menu.classList.contains('open') && !menu.contains(e.target) && e.target !== toggle) {
        menu.classList.remove('open');
      }
    });

    // Dark mode toggle logic
    const settingsToggle = document.getElementById('settings-toggle');
    const html = document.documentElement;
    const sunIcon = document.getElementById('sun-icon');
    const moonIcon = document.getElementById('moon-icon');
    function setTheme(dark) {
      if (dark) {
        html.classList.add('dark');
        localStorage.setItem('theme', 'dark');
        sunIcon.style.display = '';
        moonIcon.style.display = 'none';
      } else {
        html.classList.remove('dark');
        localStorage.setItem('theme', 'light');
        sunIcon.style.display = 'none';
        moonIcon.style.display = '';
      }
    }
    // Initial theme
    const userPref = localStorage.getItem('theme');
    const systemPref = window.matchMedia('(prefers-color-scheme: dark)').matches;
    if (userPref === 'dark' || (!userPref && systemPref)) {
      setTheme(true);
    } else {
      setTheme(false);
    }
    settingsToggle.addEventListener('click', function () {
      setTheme(!html.classList.contains('dark'));
    });
  });
</script>

<style>
header {
  background: #fff;
  border-bottom: 1px solid #eee;
  padding: 0;
  position: sticky;
  top: 0;
  z-index: 100;
  transition: background-color 0.3s ease, border-color 0.3s ease;
}

html.dark header {
  background: #18181b !important;
  border-bottom: 1px solid #333 !important;
}

nav {
  max-width: 900px;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 1rem;
  position: relative;
  min-height: 60px;
}
.site-title {
  flex: 1;
}

.site-title a {
  font-size: 1.3rem;
  font-weight: bold;
  color: #222;
  text-decoration: none;
  letter-spacing: 0.5px;
  transition: color 0.3s ease;
}

.header-controls {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.menu-toggle {
  display: flex;
  align-items: center;
  justify-content: center;
  background: none;
  border: none;
  cursor: pointer;
  z-index: 1100;
  padding: 0.5rem;
  border-radius: 4px;
  transition: background-color 0.3s ease;
}

.menu-toggle:hover {
  background: rgba(0,0,0,0.05);
}

html.dark .menu-toggle:hover {
  background: rgba(255,255,255,0.1);
}

.settings-toggle {
  display: flex;
  align-items: center;
  justify-content: center;
  background: none;
  border: none;
  cursor: pointer;
  z-index: 1100;
  padding: 0.5rem;
  border-radius: 4px;
  transition: background-color 0.3s ease;
}

.settings-toggle:hover {
  background: rgba(0,0,0,0.05);
}

html.dark .settings-toggle:hover {
  background: rgba(255,255,255,0.1);
}
.settings-toggle svg {
  vertical-align: middle;
}
.menu-bar {
  position: fixed;
  top: 0;
  right: -400px; /* Move the menu bar further off-screen */
  width: 240px;
  max-width: 100vw;
  height: 100vh;
  background: #fff;
  box-shadow: -2px 0 8px rgba(0,0,0,0.08);
  flex-direction: column;
  gap: 1.5rem;
  padding: 2rem 1.5rem;
  transition: right 0.3s;
  z-index: 1000;
  align-items: flex-start;
  display: flex;
  overflow-y: auto;
}
.menu-bar.open {
  right: 0;
}
.menu-bar a {
  color: #222;
  text-decoration: none;
  font-size: 1rem;
  font-weight: 500;
  padding-bottom: 2px;
  border-bottom: 2px solid transparent;
  transition: border-color 0.2s;
}
.menu-bar a:hover,
.menu-bar a.active {
  border-bottom: 2px solid #222;
}

/* Example dark mode styles (add to your global.css for full effect) */
:root {
  --bg: #fff;
  --text: #222;
}
html.dark {
  --bg: #18181b;
  --text: #fafafa;
  background: var(--bg);
  color: var(--text);
}
body, header, nav, .menu-bar {
  background: var(--bg);
  color: var(--text);
}
html.dark h1,
html.dark h2,
html.dark h3,
html.dark h4,
html.dark h5,
html.dark h6 {
  color: var(--text);
}

/* Dark mode header text */
html.dark .site-title a {
  color: #fff !important;
}

html.dark .menu-bar a {
  color: #fff !important;
}

html.dark .menu-bar a:hover,
html.dark .menu-bar a.active {
  border-bottom: 2px solid #fff !important;
}

/* Dark mode icons */
html.dark .menu-toggle svg,
html.dark .settings-toggle svg {
  stroke: #fff !important;
  color: #fff !important;
}

html.dark .menu-toggle svg path {
  stroke: #fff !important;
}

/* Mobile Responsive Styles */
@media (max-width: 768px) {
  nav {
    padding: 0.75rem 1rem;
  }
  
  .site-title a {
    font-size: 1.1rem;
  }
  
  .header-controls {
    gap: 0.25rem;
  }
  
  .menu-toggle,
  .settings-toggle {
    padding: 0.4rem;
  }
  
  .menu-bar {
    width: 280px;
    padding: 1.5rem 1rem;
    gap: 1rem;
  }
  
  .menu-bar a {
    font-size: 1.1rem;
    padding: 0.75rem 0;
  }
}

@media (max-width: 480px) {
  nav {
    padding: 0.5rem 0.75rem;
  }
  
  .site-title a {
    font-size: 1rem;
  }
  
  .header-controls {
    gap: 0.125rem;
  }
  
  .menu-toggle,
  .settings-toggle {
    padding: 0.3rem;
  }
  
  .menu-bar {
    width: 100vw;
    right: -100vw;
    padding: 1rem;
  }
  
  .menu-bar a {
    font-size: 1rem;
    padding: 0.5rem 0;
  }
}

html.dark .settings-toggle svg path,
html.dark .settings-toggle svg line,
html.dark .settings-toggle svg circle {
  stroke: #fff !important;
}

html.dark .menu-toggle,
html.dark .settings-toggle {
  color: #fff !important;
}
</style>