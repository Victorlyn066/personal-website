                targetSection.classList.add('active');
              }
            }
            
            // Add active class to clicked button
            this.classList.add('active');
          });
        });

        // Purpose section navigation
        const purposeButtons = document.querySelectorAll('.purpose-button');
        
        purposeButtons.forEach(button => {
          button.addEventListener('click', function(this: HTMLElement) {
            const purposeId = this.getAttribute('data-purpose');
            console.log('Switching to purpose:', purposeId);
            
            // Hide all purpose items
            const allPurposeItems = document.querySelectorAll('.purpose-item');
            allPurposeItems.forEach(item => {
              item.classList.remove('active');
            });
            
            // Remove active class from all purpose buttons
            purposeButtons.forEach(btn => {
              btn.classList.remove('active');
            });
            
            // Show selected purpose item
            if (purposeId) {
              const targetItem = document.getElementById(purposeId);
              console.log('Target purpose item found:', targetItem);
              if (targetItem) {
                targetItem.classList.add('active');
              }
            }
            
            // Add active class to clicked button
            this.classList.add('active');
          });
        });
      });
    </script>
